<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gasolinaoualcool.studio.com.gasolinaoualcool.MainActivity"
    android:background="#94db31">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="81dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Preço Állcol"
        android:id="@+id/textView"
        android:textColor="#415c00"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Preço Gasolina"
        android:id="@+id/textView2"
        android:textColor="#415c00"
        android:layout_below="@+id/imageView"
        android:layout_toRightOf="@+id/id_resultado"
        android:layout_toEndOf="@+id/id_resultado" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/id_preco_alcool"
        android:background="#ffffff"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:padding="@dimen/padding_caixa_texto" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/id_preco_gasolina"
        android:background="#ffffff"
        android:layout_below="@+id/textView2"
        android:layout_alignBottom="@+id/id_preco_alcool"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:padding="@dimen/padding_caixa_texto" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/texto_botao_verificar"
        android:id="@+id/id_botao_verificar"
        android:layout_below="@+id/id_preco_alcool"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/id_resultado"
        android:layout_below="@+id/id_botao_verificar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:textColor="#415c00"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/id_resultado_2"
        android:layout_alignLeft="@+id/id_preco_alcool"
        android:layout_alignStart="@+id/id_preco_alcool"
        android:layout_alignRight="@+id/id_preco_gasolina"
        android:layout_alignEnd="@+id/id_preco_gasolina"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/id_botao_verificar" />

</RelativeLayout>
